<h1>Panorama of cocktails</h1>
<div class="d-grid gap-2">
<%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-info" %>
</div>
<% @cocktails.each do |cocktail| %>
<div class="gallery">
    <%=image_tag("cocktail-pic")%>

  <div class="desc"> <->
    <%= link_to cocktail_path(cocktail) do %>
    <%= cocktail.name %>
    <% end %>
  </div>
</div>
<% end %>
</div>
